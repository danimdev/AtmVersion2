<Page x:Class="ATM2._0.PinLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ATM2._0"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PinLoginPage">

    <Grid>
        <Border Background="White"/>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Welcome to the ATM" FontSize="20"/>
            <Label Content="Enter your pin please" FontSize="20"/>
            <Label Name="PinLabel" Content="Pin: " FontSize="20"/>
        </StackPanel>
    </Grid>
</Page>
